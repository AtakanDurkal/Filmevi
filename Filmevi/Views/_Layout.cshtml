<!DOCTYPE html>

@using Filmevi.Models

<head>
    <title>Filmevim</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/MovieUI/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/MovieUI/css/slider.css" rel="stylesheet" type="text/css" media="all" />
    <script type="text/javascript" src="~/MovieUI/js/jquery-1.9.0.min.js"></script>
    <script type="text/javascript" src="~/MovieUI/js/move-top.js"></script>
    <script type="text/javascript" src="~/MovieUI/js/easing.js"></script>
    <script type="text/javascript" src="~/MovieUI/js/jquery.nivo.slider.js"></script>
    <script type="text/javascript">$(window).load(function() {
        $('#slider').nivoSlider();
    });</script>
</head>
<body>
    <div class="header">
        <div class="headertop_desc">
            <div class="wrap">
                <div class="nav_list">
                    <ul>
                        <li><a href="index.html">Home</a></li>
                        
                    </ul>
                </div>
                <div class="account_desc">
                    <ul>
                        <li><a href="/Admin/Login">Admin Panel</a></li>
                    </ul>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <br/>
        <div class="wrap">
            <div class="header_bottom">
                <div class="header_bottom_left">
                    <div class="categories">
                        <ul>
                            <h3>Categories</h3>
                            <li><a href="/Home/Index">Tumu</a></li>
                            @foreach (var item in Constant.CATEGORIES)
                            {
                                <li><a href="/Home/Category/@item">@item</a></li>
}
                        </ul>
                    </div>
                </div>
                <div class="header_bottom_right">
                    @RenderBody()
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
    <!------------End Header ------------>
   
    <script type="text/javascript">$(document).ready(function() {
			$().UItoTop({ easingType: 'easeOutQuart' });

		});</script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
</body>
</html>

